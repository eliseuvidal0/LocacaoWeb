@model Locacao
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Home - Locação</title>
</head>
<body>
    <header>
        <div class="container">
            <nav class="menu">
                <ul>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </nav>
        </div>
    </header>
    <section>
        <div class="container">
            <form asp-action="Cadastrar" asp-controller="Locacao" method="post">
                <fieldset>
                    <legend>Cadastrar Locação</legend>
                    <div asp-validation-summary="ModelOnly"></div>
                    <Grid>
                        <Label Content="Cliente:" HorizontalAlignment="Left" Margin="160,40,0,0" VerticalAlignment="Top" />
                        <Label Content="Veículo:" HorizontalAlignment="Left" Margin="160,80,0,0" VerticalAlignment="Top" />
                        <Label Content="Funcionário:" HorizontalAlignment="Left" Margin="130,120,0,0" VerticalAlignment="Top" />
                        <Label Content="Forma de pagamento:" HorizontalAlignment="Left" Margin="60,160,0,0" VerticalAlignment="Top" />
                        <Label Content="Previsão de entrega:" HorizontalAlignment="Left" Margin="72,200,0,0" VerticalAlignment="Top" />
                        
                        <ComboBox Name="cboClientes" HorizontalAlignment="Left" Margin="240,45,0,0" VerticalAlignment="Top" Width="180" TabIndex="0" />
                        <ComboBox Name="cboVeiculos" HorizontalAlignment="Left" Margin="240,85,0,0" VerticalAlignment="Top" Width="180" TabIndex="1" />
                        <ComboBox Name="cboFuncionarios" HorizontalAlignment="Left" Margin="240,125,0,0" VerticalAlignment="Top" Width="180" TabIndex="2" />
                        <ComboBox Name="cboFormaPagamento" HorizontalAlignment="Left" Margin="240,165,0,0" VerticalAlignment="Top" Width="180" TabIndex="3">
                            <ComboBoxItem Content="Dinheiro" />
                            <ComboBoxItem Content="Cartão de débito" />
                            <ComboBoxItem Content="Cartão de crédito" />
                        </ComboBox>
                        <DatePicker x:Name="txtDataEntrega" HorizontalAlignment="Left" Margin="240,205,0,0" VerticalAlignment="Top" Width="180" TabIndex="4" />

                    </Grid>

                    <input type="submit" value="Cadastrar" />
                </fieldset>
            </form>
        </div>
    </section>
</body>

</html>


