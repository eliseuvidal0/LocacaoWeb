@model List<Locacao>
<!DOCTYPE html>
<html lang="pt-br">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Colorlib Templates" />
    <meta name="author" content="Colorlib" />
    <meta name="keywords" content="Colorlib Templates" />

    <title>Devolver - Locação</title>

    <link href="~/vendor/mdi-font/css/material-design-iconic-font.css" rel="stylesheet" media="all" />
    <link href="~/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" media="all" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet" />
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <link href="~/css/cadastrar.css" rel="stylesheet" media="all">

    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" media="all" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" media="all" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" media="all" />

</head>
<body>
    <!--<header>

    </header>-->
    <section>
        <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
            <div class="wrapper wrapper--w1200">
                <div class="card card-5">
                    <div class="card-heading">
                        <h2 class="title">Listar Todas Locações</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">CLIENTE</th>
                                        <th scope="col">VEICULO</th>
                                        <th scope="col">PREVISAO DE ENTREGA</th>
                                        <th scope="col">TOTAL LOCAÇÃO</th>
                                        <th scope="col">DEVOLVIDO?</th>
                                        <th scope="col">STATUS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Locacao loc in Model)
                                    {
                                        string dev;
                        @if (loc.devolvido == false)
                        {
                            dev = "Locado";
                        }
                        else
                        {
                            dev = "Disponível";
                        }
                                        <tr>
                                            <td>@loc.cliente.nome</td>
                                            <td>@loc.veiculo.modelo</td>
                                            <td>@loc.previsaoEntrega</td>
                                            <td>@loc.totalLocacao</td>
                                            <td>@dev</td>
                                            <td><a asp-action="Devolver" asp-controller="Locacao" asp-route-id="@loc.id" class="btn btn-dark">Devolver</a></td>

                                        </tr>}
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/datepicker/moment.min.js"></script>
    <script src="~/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/js/cadastrar.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

</body>
</html>
