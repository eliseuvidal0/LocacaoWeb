@model List<Veiculo>
<!DOCTYPE html>
<html lang="pt-br">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Colorlib Templates" />
    <meta name="author" content="Colorlib" />
    <meta name="keywords" content="Colorlib Templates" />

    <title>Listar - Veículos</title>

    <link href="~/vendor/mdi-font/css/material-design-iconic-font.css" rel="stylesheet" media="all" />
    <link href="~/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" media="all" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet" />
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <link href="~/css/cadastrar.css" rel="stylesheet" media="all">

    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" media="all" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" media="all" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" media="all" />

</head>
<body>
    <!--<header>

    </header>-->
    <section>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <!--<button class="navbar-brand disabled">Listar Clientes</button>-->
                <a asp-action="Portal" asp-controller="Home" class="navbar-brand" role="button">Portal</a>
                <a asp-action="Cadastrar" asp-controller="Locacao" class="navbar-brand" role="button">Cadastrar Locacao</a>
                <a asp-action="Cadastrar" asp-controller="Funcionario" class="navbar-brand" role="button">Cadastrar Funcionário</a>
                <a asp-action="Index" asp-controller="Funcionario" class="navbar-brand" role="button">Listar Funcionários</a>
                <a asp-action="Cadastrar" asp-controller="Veiculo" class="navbar-brand" role="button">Cadastrar Veículo</a>
                <a asp-action="Index" asp-controller="Cliente" class="navbar-brand" role="button">Listar Clientes</a>
                <a asp-action="Index" asp-controller="Locacao" class="navbar-brand" role="button">Listar Locações</a>
                <a asp-action="Reservados" asp-controller="Reserva" class="navbar-brand" role="button">Listar Reservas</a>
                <a asp-action="Devolucao" asp-controller="Locacao" class="navbar-brand" role="button">Devolver</a>
            </div>
        </nav>
        <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
            <div style="text-align: right; margin: 20px 200px 10px 0">
                <a asp-action="Logout" asp-controller="Gerente" class="btn btn--radius-2 btn--red">Logout</a>
            </div>
            <div class="wrapper wrapper--w1200">
                <div class="card card-5">
                    <div class="card-heading">
                        <h2 class="title">Listar Veículos</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <table class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">PLACA</th>
                                        <th scope="col">MARCA</th>
                                        <th scope="col">MODELO</th>
                                        <th scope="col">COR</th>
                                        <th scope="col">VALOR DIÁRIA</th>
                                        <th scope="col">EDITAR</th>
                                        <th scope="col">EXCLUIR</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Veiculo vei in Model)
                                    {
                                        <tr>
                                            <td>@vei.placa</td>
                                            <td>@vei.marca</td>
                                            <td>@vei.modelo</td>
                                            <td>@vei.cor</td>
                                            <td>@vei.valorDiaria</td>
                                            <td><a asp-action="Editar" asp-controller="Veiculo" asp-route-id="@vei.id" class="btn btn-primary" role="button">Editar</a></td>
                                            <td><a asp-action="Remover" asp-controller="Veiculo" asp-route-id="@vei.id" class="btn btn-danger">Excluir</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/datepicker/moment.min.js"></script>
    <script src="~/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/js/cadastrar.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

</body>
</html>
