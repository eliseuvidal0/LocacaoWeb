@model Funcionario
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Colorlib Templates" />
    <meta name="author" content="Colorlib" />
    <meta name="keywords" content="Colorlib Templates" />

    <title>Home - Locação</title>

    <link href="~/vendor/mdi-font/css/material-design-iconic-font.css" rel="stylesheet" media="all" />
    <link href="~/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" media="all" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet" />
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <link href="~/css/cadastrar.css" rel="stylesheet" media="all">

</head>
<body>
    <!--<header>
        <div class="container">
            <nav class="menu">
                <ul>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </nav>
        </div>
    </header>-->
    <section>
        <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
            <div class="wrapper wrapper--w790">
                <div class="card card-5">
                    <div class="card-heading">
                        <h2 class="title">Cadastrar Funcionário</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Cadastrar" asp-controller="Funcionario" method="post">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="form-row">
                                <div class="name">Nome</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-5" type="text" asp-for="nome">
                                        <label asp-for="nome" />
                                        <span asp-validation-for="nome" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">CPF</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-5" type="text" asp-for="cpf">
                                        <label asp-for="cpf" />
                                        <span asp-validation-for="cpf" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Email</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-5" type="text" asp-for="email">
                                        <label asp-for="email" />
                                        <span asp-validation-for="email" />
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn--radius-2 btn--red" type="submit" value="Cadastrar">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/datepicker/moment.min.js"></script>
    <script src="~/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/js/cadastrar.js"></script>

</body>
</html>

