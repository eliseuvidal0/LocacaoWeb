@model Funcionario
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Home - Locação</title>
</head>
<body>
    <header>
        <div class="container">
            <nav class="menu">
                <ul>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </nav>
        </div>
    </header>
    <section>
        <div class="container">
            <form asp-action="Cadastrar" asp-controller="Funcionario" method="post">
                <fieldset>
                    <legend>Cadastrar Funcionário</legend>
                    <div asp-validation-summary="ModelOnly"></div>


                    <label asp-for="nome">Nome do Funcionário:</label>
                    <input asp-for="nome" type="text" />
                    <span asp-validation-for="nome" />
                    <br />

                    <label asp-for="cpf">CPF do Funcionário:</label>
                    <input asp-for="cpf" type="text" />
                    <span asp-validation-for="cpf" />
                    <br />

                    <label asp-for="email">E-mail do Funcionário:</label>
                    <input asp-for="email" type="text" />
                    <span asp-validation-for="email" />
                    <br />

                    <input type="submit" value="Cadastrar" />
                </fieldset>
            </form>
        </div>
    </section>
</body>

</html>

